#! /bin/bash

echo "No style: 033[0m"
echo -e "\nForeground colors: "
echo -e "\033[30;47mblack: 033[30m\033[0m"
echo -e "\033[31mred: 033[31m\033[0m"
echo -e "\033[32mgreen: 033[32m\033[0m"
echo -e "\033[33myellow: 033[33m\033[0m"
echo -e "\033[34mblue: 033[34m\033[0m"
echo -e "\033[35mmagenta: 033[35m\033[0m"
echo -e "\033[36mcyan: 033[36m\033[0m"
echo -e "\033[37mwhite: 033[37m\033[0m"
echo -e "\nBackground colors:"
echo -e "\033[0;40mblack: 033[0;40m\033[0m"
echo -e "\033[0;41mred: 033[0;41m\033[0m"
echo -e "\033[30;42mgreen: 033[0;42m\033[0m"
echo -e "\033[30;43myellow: 033[0;43m\033[0m"
echo -e "\033[0;44mblue: 033[0;44m\033[0m"
echo -e "\033[0;45mmagenta: 033[0;45m\033[0m"
echo -e "\033[30;46mcyan: 033[0;46m\033[0m"
echo -e "\033[30;47mwhite: 033[30;47m\033[0m"
echo -e "\n\nThese code should be prefixed with a '\'"